<%- include partials/header.ejs %>

<!-- Main Content -->
<main class="container">
    <section class="about-content p-10" style="margin-bottom: 70px">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card" style="padding-bottom: 10px; padding-top: 30px;" >
                    <div class="card-body">
                        <h2 class="card-title text-center">Login</h2>

                        <!-- Display the error message if it exists -->
                        <% if (typeof error !== 'undefined' && error !== null) { %>
                            <div class="alert alert-danger" role="alert">
                                <%- error %>
                            </div>
                        <% } %>

                        <!-- Login Form -->
                        <form action="/login" method="POST">
                            <!-- Username -->
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" class="form-control" id="username" name="username" required>
                            </div>

                            <!-- Password -->
                            <div class="form-group">
                                <label for="password">Password</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="password" name="password" required>
                                    <div class="input-group-append">
                                        <span class="input-group-text">
                                            <a href="#" data-toggle="popover" id="password-peek">
                                                <i class="fas fa-eye" id="peek-icon"></i>
                                            </a>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-primary btn-block" id="loginbtn">Login</button>
                        </form>

                        <!-- Sign Up Button -->
                        <div class="mt-3 text-center">
                            <a href="/create-account" class="btn btn-secondary btn-block">Sign Up</a>
                        </div>

                        <!-- OR Divider -->
                        <div class="divider-with-text">
                            <span>———————— OR ————————</span>
                        </div>

                        <!-- Social Login Options -->
                        <div class="social-login-options mt-2">
                            <!-- Facebook Button -->
                            <a href="/maintenance" class="btn btn-block social-btn facebook">
                                <i class="fab fa-facebook-f"></i> Sign up with Facebook
                            </a>

                            <!-- Google Button -->
                            <a href="/maintenance" class="btn btn-block social-btn google">
                                <i class="fab fa-google"></i> Sign up with Google
                            </a>
                        </div>

                       <!-- Login Hint -->
                        <p class="mt-3 text-center">Login is required to place an order. 
                            <a href="#" class="login-hint" data-toggle="popover" title="For demonstration purposes:<br>Username: eli<br>Password: test1" data-content="For demonstration purposes, use this:<br>Username: eli<br>Password: test1" data-html="true">Press for hint</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include partials/footer.ejs %>
